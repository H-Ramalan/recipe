<p style="color: green"><%= notice %></p>

<h1 class= 'recipe-name-show'><%= @recipe.name %></h1>

<div>
  <div class='items'>
    <div>
      <p class='list'>
        <strong>Preparation time:</strong>
        <%= @recipe.preparation_time %> 
      </p>
      <p class='list'>
        <strong>Cooking time:</strong>
        <%= @recipe.cooking_time %> 
      </p>
      <p class='list'>Steps go here...</p>
    </div>
    <div class='toggler'>
      Public
      <label class="switch">
        <input type="checkbox">
        <span class="slider round"></span>
      </label>
    </div>
  </div>

  <div class="table-div">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Food</th>
        <th>Quantity</th>
        <th>Value</th>

         <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% if @recipe_foods.present? %>
        <% @recipe_foods.each do |recipe_food| %>
        <tr>
        <td><%= recipe_food.food.name %></td>
        <td><%= recipe_food.quantity %></td>
        <td><%= recipe_food.quantity * recipe_food.food.price %></td>
        <td>
        <div>
        <button> Edit </button>
        <%= form_for([@recipe, recipe_food], method: :delete, html: { data: {confirm: 'Are you sure you want to delete this ingredient?' } }) do |f| %>
        <%= f.submit 'Remove' %>
        <% end %>
        </div>
        </td>
        </tr>
        <% end %>
        <% else %>
        <tr>
        <td> No ingredient avaialable for rthis recipe</td>
        </tr>
        <% end %>
    </tbody>
  </table>
  </div>
</div>
